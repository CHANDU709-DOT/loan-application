}

.wrapper1 .navbar .left ul li,
.wrapper1 .navbar .right img{
  margin: 0 10px;
}

.wrapper1 .navbar .right a{
  text-align: right;
}

.wrapper1 .navbar .right a span{
  font-size: 10px;
}

.wrapper1 .navbar .right ul li{
  position: relative;
}

.wrapper1 .navbar .right ul li .dropdown{
  position: absolute;
  top: 60px;
  right: 0px;
  background: #fff;
  padding: 10px 25px;
  border-radius: 5px;
  display: none;
}

.wrapper1 .navbar .right ul li .dropdown .fas{
  margin-right: 10px;
}

.wrapper1 .navbar .right ul li .dropdown:before{
  content: "";
  position: absolute;
  top: -20px;
  left: 10%;
  transform: translateX(-50%);
  border: 10px solid;
  border-color: transparent transparent #fff transparent;
}

.wrapper1 .navbar .right ul li.active .dropdown{
  display: block;
}

.center {
